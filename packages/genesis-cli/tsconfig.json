{
	"compilerOptions": {
		"target": "ES2019",
		"module": "commonjs",
        "moduleResolution": "node",
        "strict": true,
        "declaration": false,
        "skipLibCheck": true,
        "esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"removeComments": false,
		"experimentalDecorators": true,
		"outDir": "./dist",
        "lib": ["esnext"]
	},
    "include": ["./src/**/*"],
    "exclude": ["node_modules"]
}
